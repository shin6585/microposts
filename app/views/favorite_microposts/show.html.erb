<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.favorite_microposts.any? %>
      <h3>favorites (<%= @user.favorite_microposts.count %>)</h3>
      <ol class="microposts">
        <%= render partial: 'microposts/micropost', collection: @favorite_microposts %>
      </ol>
    <% end %>
  </div>
</div>